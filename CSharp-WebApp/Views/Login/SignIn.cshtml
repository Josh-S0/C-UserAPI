@model CSharp_WebApp.Models.UserView

@{
    ViewData["Title"] = "Sign In";
   
}

<h1>Sign In</h1>
<hr />
<div class="row">
    <div class="col-md-4">
     
        <form asp-controller="Login" asp-action="AttemptLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email Address</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger">@ViewBag.badEmail</span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger">@ViewBag.badPass</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<a asp-controller="Home" asp-action="Index">Back to Home</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
